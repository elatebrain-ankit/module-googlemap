<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="ebgooglemap" class="Elatebrain\GoogleMap\Block\Gmap" is_email_compatible="false">
        <label translate="true">Elatebrain Google Map</label>
        <description translate="true">Google Map Widget</description>
        <parameters>
            <parameter name="title" xsi:type="text" required="false" visible="true">
                <label translate="true">Marker Title</label>
            </parameter>
            <parameter name="width" xsi:type="text" required="false" visible="true">
                <label translate="true">Map Width</label>
            </parameter>
            <parameter name="height" xsi:type="text" required="false" visible="true">
                <label translate="true">Map Height</label>
            </parameter>
            <parameter name="map_type" xsi:type="select" visible="true" source_model="Elatebrain\GoogleMap\Model\Config\Source\MapTypes">
                <label translate="true">Map Type</label>
            </parameter>
            <parameter name="zoom" xsi:type="text" required="false" visible="true">
                <label translate="true">Zoom</label>
            </parameter>
            <parameter name="latitude" xsi:type="text" required="false" visible="true">
                <label translate="true">Latitude</label>
            </parameter>
            <parameter name="longitude" xsi:type="text" required="false" visible="true">
                <label translate="true">Longitude</label>
            </parameter>
            <parameter name="draggable" xsi:type="select" required="false" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Allow Map Dragging</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
